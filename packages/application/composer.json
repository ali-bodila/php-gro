{
    "name": "gro/application",
    "description": "Application layer components for GRO DDD library suite",
    "type": "library",
    "keywords": ["ddd", "domain-driven-design", "application", "php", "cqrs", "use-cases"],
    "homepage": "https://github.com/ali/php-gro",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali",
            "email": "bodila.ali@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "gro/core": "^1.0",
        "gro/domain": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Gro\\Application\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gro\\Application\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}