{
    "name": "gro/gro",
    "description": "A PHP library suite for building Domain-Driven Design (DDD) based applications",
    "type": "library",
    "keywords": ["ddd", "domain-driven-design", "php", "library", "framework"],
    "homepage": "https://github.com/ali/php-gro",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali",
            "email": "bodila.ali@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.0|^7.0"
    },
    "replace": {
        "gro/core": "self.version",
        "gro/domain": "self.version",
        "gro/application": "self.version",
        "gro/infrastructure": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Gro\\": "packages/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}